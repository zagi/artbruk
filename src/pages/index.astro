  title="Art-Bruk · Ekskluzywne remonty i aranżacje wnętrz"
>
  <Hero />
  <Services services={services} />
  <Expertise faqs={faqs} />
  <About />
  <Testimonials testimonials={testimonials} />
  <Cta />
</Layout>
